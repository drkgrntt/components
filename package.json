{
  "name": "web-components-storybook",
  "version": "1.0.0",
  "description": "A component library that demonstrates how to integrate Web Components with Storybook.",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "make-dir dist && rollup -c rollup.config.js && tsc -p tsconfig.json",
    "prepublishOnly": "copyfiles package.json dist",
    "lint": "eslint . --ext .ts",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/html": "^6.5.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "babel-loader": "^8.2.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-plugin-storybook": "^0.6.4",
    "make-dir-cli": "^3.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-html": "^0.2.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {}
}
